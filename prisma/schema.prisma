generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  reviews   Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AnimeTitle {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  reviews     Review[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id           Int        @id @default(autoincrement())
  rating       Int
  comment      String
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  animeTitle   AnimeTitle @relation(fields: [animeTitleId], references: [id])
  animeTitleId Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
